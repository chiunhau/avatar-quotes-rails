<p id="notice"><%= notice %></p>

<h1>Lines</h1>

<table>
  <thead>
    <tr>
      <th>ID.</th>
      <th>Speaker</th>
      <th>Text</th>
      <th>Episode</th>
      <th>Episode ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lines.order(:id).each do |line| %>
      <tr>
        <td><%= line.id%></td>
        <td><%= line.speaker %></td>
        <td><%= line.text %></td>
        <td><%= line.episode_name %></td>
        <td><%= line.episode_id %></td>
        <td><%= link_to 'Show', line %></td>
        <td><%= link_to 'Edit', edit_line_path(line) %></td>
        <td><%= link_to 'Destroy', line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

